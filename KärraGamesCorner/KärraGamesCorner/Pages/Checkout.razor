@page "/checkout"
@using System.Security.Permissions


<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

<body>
	<div class="checkoutform">
		<div class="row">
			<div id="checkout-form" class="col-xs-12 col-md-4 col-sm-6">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">
							Betalningsinfo
						</h3>
					</div>
					<div class="panel-body">
						<form role="form">

							<div class="row">
								<div class="col-xs-11">
									<div class="form-group">
										<label for="couponCode">Namn</label>
										<input type="text" class="form-control" name="couponCode" placeholder="Ditt fullständiga namn..."/>
									</div>
								</div>
							</div>
							
							<div class="form-group">
								<label for="cardNumber">Kortnummer</label>
								<div class="input-group">
									<input type="text" class="form-control" id="cardNumber" placeholder="xxxx xxxx xxxx xxxx" required autofocus />
									<span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
								</div>
							</div>
							<div class="row">
								<div class="col-xs-7 col-md-7">
									<div class="form-group">
										<label for="expityMonth">Utgångsdatum</label>
										<div class="col-xs-12 col-lg-12">
											<div class="col-xs-6 col-lg-6 ">
												<input type="text" class="form-control" id="expityMonth" placeholder="MM" required />
											</div>
											<div class="col-xs-6 col-lg-6 ">
												<input type="text" class="form-control" id="expityYear" placeholder="ÅÅ" required />
											</div>
										</div>
									</div>
								</div>

								<div class="col-xs-4 col-md-4 pull-right">
									<div class="form-group">
										<label for="cvCode">
											CV Kod
										</label>
										<input type="password" class="form-control" id="cvCode" placeholder="CVC" required />
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
				<ul class="nav nav-pills nav-stacked">
					<li class="active">
						<a href="#"><span class="badge pull-right"><span class="glyphicon glyphicon-usd"></span>4200</span> Att betala inkl. moms</a>
					</li>
				</ul>
				<br />
				<a href="/" class="btn btn-success btn-lg btn-block" role="button">Slutför betalning</a>
			</div>
		</div>
	</div>
</body>

